{
  "name": "nestjs-inject-transformer",
  "version": "1.0.0",
  "description": "Amp up your NestJS and `class-transformer` stack with dependency injected transforms.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "directories": {
    "lib": "lib"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc",
    "prebuild": "rimraf dist",
    "prepare": "npm run build",
    "dev": "npm run prebuild && tsc -w",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/helveg/nestjs-inject-transformer"
  },
  "bugs": "https://github.com/helveg/nestjs-inject-transformer/issues",
  "homepage": "https://github.com/helveg/nestjs-inject-transformer#readme",
  "keywords": [
    "seeding",
    "seeder",
    "seed",
    "nestjs",
    "seeder"
  ],
  "author": "Robin De Schepper <robin.deschepper93@gmail.com>",
  "license": "MIT",
  "peerDependencies": {
    "@nestjs/common": ">=8.x",
    "@nestjs/core": ">=8.x",
    "class-transformer": ">=0.5.0"
  },
  "devDependencies": {
    "@nestjs/common": "^9.1.6",
    "@nestjs/core": "^9.1.6",
    "@types/jest": "^29.4.0",
    "jest": "^29.4.3",
    "prettier": "^2.8.4",
    "reflect-metadata": "*",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.5",
    "ts-jest-resolver": "^2.0.1",
    "typescript": "^4.7.4"
  },
  "jest": {
    "preset": "ts-jest",
    "resolver": "ts-jest-resolver",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "lib",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": [
        "ts-jest",
        {
          "tsconfig": "./tsconfig.json"
        }
      ]
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
