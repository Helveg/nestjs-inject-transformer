{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "moduleResolution": "Node",
    "removeComments": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "outDir": "./dist/esm",
    "incremental": false
  },
  "exclude": ["node_modules", "dist", "sample", "**/*spec.ts"]
}
